{
  "compilerOptions": {
    "types": ["node", "electron"],
    "target": "ES2020",
    "module": "CommonJS",
    "jsx": "react",
    "outDir": "./build",
    "strict": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "rootDir": "."
  },
  "include": ["src", "electron", "components", "src/index.tsx"]
}
